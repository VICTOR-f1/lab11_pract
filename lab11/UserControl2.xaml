                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>

        </Image>
        <Image   Source="/photo_2022-12-22_21-47-30.jpg" Canvas.Left="131" Canvas.Top="156" Height="122" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"
              >
            <Image.RenderTransform>
